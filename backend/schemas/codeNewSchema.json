{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "title": "Root Schema",
  "required": [
      "text",
      "margin",
      "size",
      "dark",
      "light",
      "description"
  ],
  "properties": {
      "text": {
          "type": "string",
          "default": "",
          "title": "The link Schema",
          "examples": [
              "hello world"
          ]
      },
      "margin": {
          "type": ["string", "number", "integer"],
          "default": 0,
          "title": "The margin Schema",
          "examples": [
              4
          ]
      },
      "size": {
          "type": ["string", "number", "integer"],
          "default": 0,
          "title": "The size Schema",
          "examples": [
              20
          ]
      },
      "dark": {
          "type": "string",
          "default": "",
          "title": "The codeColor Schema",
          "examples": [
              "000000"
          ]
      },
      "light": {
          "type": "string",
          "default": "",
          "title": "The bgColor Schema",
          "examples": [
              "ffffff"
          ]
      },
      "centerImageUrl": {
          "type": "string",
          "default": "",
          "title": "The img Schema",
          "examples": [
              "https://cdn-icons-png.flaticon.com/512/1389/1389234.png"
          ]
      },
      "centerImageSizeRatio": {
          "type": ["string", "number", "integer"],
          "default": 0.0,
          "title": "The imgRatio Schema",
          "examples": [
              0.3
          ]
      },
      "description": {
          "type": "string",
          "default": "",
          "title": "The description Schema",
          "examples": [
              "blablabla"
          ]
      }
  },
  "examples": [{
      "text": "hello world",
      "margin": 4,
      "size": 20,
      "dark": "000000",
      "light": "ffffff",
      "centerImageUrl": "https://cdn-icons-png.flaticon.com/512/1389/1389234.png",
      "centerImageSizeRatio": 0.3,
      "description": "blablabla"
  }]
}